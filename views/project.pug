extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= name

        p.lead.text-light= description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each tech in technologies
            li= tech

        if live_link
          a.button.expanded(href= `${live_link}` target="_blank") Live Demo
        if github_link
          a.button.expanded(href= `${github_link}` target="_blank") GitHub Repo
        if project_link
          a.button.expanded(href= `${project_link}` target="_blank") Project Home

    
    img.image(src=`/static/img/main_${id}.png`)